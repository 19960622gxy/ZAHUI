<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    app:cardElevation="5dp"
    android:layout_marginTop="5dp"
    android:padding="12dp">


    <LinearLayout
        android:padding="12dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_item_xiaohua_love_time"
                android:textSize="24sp"
                android:textColor="#000000"
                android:text="时间"
                android:maxEms="17"
                android:maxLines="1"
                android:ellipsize="end"
                />
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"></View>
            <ImageView
                android:id="@+id/love_xiaohua_shoucang"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@mipmap/collection_selected"/>
            <View
                android:layout_width="10dp"
                android:layout_height="match_parent"></View>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_item_xiaohua_love_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="这是内容这是内容这是内容这是内容这是内容这是内容这是内容这是内容这是内容这是内容这是内容这是内容这是内容这是内容这是内容"
            android:textSize="20sp"
            android:textColor="#696969"
            />
        <!--<TextView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="1dp"-->
            <!--android:background="#aaa"-->
            <!--android:layout_marginTop="15dp" />-->
    </LinearLayout>





</android.support.v7.widget.CardView>